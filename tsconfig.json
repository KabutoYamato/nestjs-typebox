{
    "compilerOptions": {
        "lib": ["esnext"],
        "target": "esnext",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "strict": true
    },
    "include": ["src/**/*.ts"]
}
