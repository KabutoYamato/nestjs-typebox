{
    "compilerOptions": {
        "lib": ["es2022"],
        "target": "es2022",
        "module": "ES2022",
        "moduleResolution": "nodenext",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": false,
        "sourceMap": true,
        "outDir": "./dist",
        "noEmit": true,
        "incremental": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
}
